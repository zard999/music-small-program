<view class="videoContainer">
  <!-- header -->
  <view class="header">
    <image class="imgLeft" src="../../static/images/video/video.jpg"></image>
    <view class="search">搜索音乐</view>
    <image class="logo" src="../../static/images/logo.png"></image>
  </view>

  <!-- nav -->
  <scroll-view scroll-x enable-flex class="navScroll" scroll-with-animation
    scroll-into-view="{{'scroll' + currentNavId}}">
    <view data-id="{{item.id}}" id="{{'scroll' + item.id}}" bindtap="changNav"
      class="navItem {{currentNavId === item.id && 'active'}}" wx:for="{{navList}}" wx:key="id">{{item.name}}</view>
  </scroll-view>

  <!-- video -->
  <scroll-view bindscrolltolower="handleScrolltolower" bindrefresherrefresh="handleResherrefresh" refresher-enabled refresher-triggered="{{flag}}" scroll-y enable-flex class="videoScroll">
    <view class="videoItem" wx:for="{{videoList}}" wx:key="vid">
      <video 
        wx:if="{{item.vid === vid}}" 
        id="{{item.vid}}" 
        bindtap="playOrPause" 
        bindtimeupdate="handleTimeUpdate"
        bindended="handleEnd"
        class="video"
        src="{{item.urlInfo.url}}"
        ></video>
      <image id="{{item.vid}}" bindtap="playOrPause" class="videoImg" wx:else src="{{item.coverUrl}}"></image>

      <view class="content">{{item.title}}</view>
      <view class="footer">
        <image class="avatar" src="{{item.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-buoumaotubiao15"></text>
            <text class="count">{{item.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun1"></text>
            <text class="count">{{item.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>