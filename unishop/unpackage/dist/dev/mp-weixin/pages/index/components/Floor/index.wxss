.floor .floorImg {
  width: 100%;
  height: 350rpx;
}
.floor .floorScroll {
  display: flex;
  height: 300rpx;
}
.floor .floorScroll .scrollItem {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}
.floor .floorScroll .scrollItem.single {
  flex-shrink: 0;
  line-height: 300rpx;
  text-align: center;
}
.floor .floorScroll .scrollItem .itemImg {
  width: 200rpx;
  height: 200rpx;
}
.floor .floorScroll .scrollItem .itemText {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
}

