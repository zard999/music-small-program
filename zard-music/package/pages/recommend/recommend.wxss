@import '../../..//static/iconfont/iconfont.wxss';
page{
  height: 100%;
}
/* header */
.recommendContainer {
  height: 100%;
}

.recommendContainer .header {
  height: 300rpx;
  position: relative;
}

.recommendContainer .header .headerImage {
  width: 100%;
  height: 300rpx;
}

/* top这四个设为0，是把子盒子拉得和父盒子一样大 */
.recommendContainer .header .headerDate {
  position: absolute;

  /* top: 50%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx; */

  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;

  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
}

/* 主要内容main */
.recommendContainer .main {
  position: relative;
  background-color: #fff;
  margin-top: -20rpx;
  border-radius: 30rpx;
  padding: 20rpx;
}

.recommendContainer .main .mainHeader {
  display: flex;
  justify-content: space-between;
}

.recommendContainer .main .mainScroll {
  height: calc(100vh - 382rpx);
  padding-top: 20rpx;
}

.recommendContainer .main .scrollItem {
  display: flex;
  align-items: center;
}

.recommendContainer .main .scrollItem .songImg {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.recommendContainer .main .scrollItem .song {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 28rpx;
}